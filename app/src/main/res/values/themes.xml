<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>

        <item name="colorAccentedSurface">@color/color_primary_light</item>
        <item name="colorIcon">@color/color_gray</item>
        <item name="colorIndicator">@color/color_green</item>
        <item name="colorDivider">@color/color_divider_dark</item>
        <item name="colorItemBackground">@color/color_item_background</item>
        <item name="colorText">@color/color_primary</item>
        <item name="colorSubtext">@color/color_gray_dark</item>
        <item name="colorArchiveIcon">@color/color_gray</item>
        <item name="colorMessageCounter">@color/color_indicator</item>
        <item name="colorSelectIcon">@color/color_primary</item>
        <item name="colorSwipeBackground">@color/color_primary_dark</item>

        <item name="colorSnackbarBackground">@color/color_primary</item>
        <item name="colorSnackbarText">@android:color/white</item>

        <item name="colorChipBackground">@color/color_primary_light</item>
        <item name="colorChipGroupBackground">@color/color_item_background</item>
        <item name="colorChipCloseIcon">@android:color/white</item>

    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_splash</item>
    </style>
</resources>